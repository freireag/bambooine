!!! XML
!!! Strict

%html{html_attrs}
  %head
    %title Bambooine
    = javascript_include_tag :defaults
    = stylesheet_link_tag :all, :cache => true
  %body
    #wrapper
      #header
        %h1= link_to 'freireag', root_path
        %span.flash_notice
          = flash[:notice]
      #content
        = yield
      #rightcol
        - form_tag posts_path, :method => :get do
          = text_field_tag :search, params[:search], :class => 'search_text'
        = tag_index